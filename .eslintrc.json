{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "globals": {
      "Phaser": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "arrow-parens": "off",
    "no-unused-vars": "off",
    "prefer-destructuring": "off",
    "import/no-unresolved": "off",
    "max-classes-per-file": ["error", 2]
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}